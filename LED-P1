ORG 0X00
BSF STATUS, RP0
CLRF TRISB
BCF STATUS, RP0
BSF STATUS, RP0

MOVLW b'00000001'
MOVWF TRISB

BCF STATUS, RP0

MAIN
   BTFSC PORTB, 0 ; EĞER RB0 İSE (BASILMAMIŞ SONRAKİ SATIRA ATLA)
   GOTO LED_ON ; BASILMAMIŞSA LED_ON A GEÇ

LED_OFF
    BCF PORTB, 1 ; LED SÖNER (RB1 = 0) 
    GOTO MAIN   
  
LED_ON
   BSF PORTB, 1 ; LED YANAR (RB1 = 1)  
   GOTO MAIN

END   
